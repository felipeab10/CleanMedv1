@model CleanMed.Models.NiveisAcesso
@{
    Layout = "";
}
<div class="modal-dialog">
    <div class="modal-content">
        <div>
            <h6><b>Adicionar novo nível de acesso</b></h6>

        </div>
        <form id="Create" asp-controller="NiveisAcessos" asp-action="Create">
            <div class="modal-content">

                <div class="row">
                    <div class="col s12">
                        <div class="form-group">
                            <label for="Name">
                                Nome
                            </label>
                            <input type="text" id="Nomes" asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="form-group">
                            <label for="Descrição">
                                Descrição
                            </label>
                            <textarea id="Descricao" class="materialize-textarea" asp-for="Descricao" required></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col s12">
                        <div class="form-group">
                            <button type="button" class="modal-close waves-effect grey btn-small" data-dismiss="modal">Cancelar</button> &nbsp;
                            <button type="submit" class=" waves-effect waves-green btn-small " >Salvar</button>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>

</div>
@section Scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
   
}