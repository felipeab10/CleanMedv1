@model CleanMed.Models.GrupoFaturamento
@{
    ViewBag.Current = "Faturamento";
}

<div class="">
    <div class="row">
        <div class="col s8">
            <div class="card">
                <div class="card-header BtnColor">
                    <h5 class="center"><span class="card-title center " style="color:white;">Atualizar grupo de procedimento</span></h5>
                </div>
                <div class="card-content">
                    <form asp-controller="GrupoFaturamentos" asp-action="Edit">
                    <input asp-for="GrupoFaturamentoId" type="hidden" />
                        <div class="row">
                            <div class="col s12">
                                <div class="form-group">
                                    <label asp-for="Descricao" class="control-label">Descrição<span class="error">*</span></label>
                                    <input type="text" class="form-control" asp-for="@Model.Descricao" required id="Descricao" />
                                    <span asp-validation-for="Descricao" class="text-danger error"></span>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col s12">
                                <div class="form-group">
                                    <label asp-for="Tipo" class="control-label">Tipo de Grupo<span class="error">*</span></label>
                                    <select class="form-control" asp-for="Tipo" asp-items="@ViewBag.TipoGrupoId" required>
                                        <option value="" selected disabled>Selecione uma opção</option>
                                    </select>
                                    <span asp-validation-for="Tipo" class="text-danger error"></span>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col s12">
                                <div class="form-group">
                                    <label asp-for="Status" class="control-label">Status<span class="error">*</span></label>
                                    <select class="form-control" asp-for="Status" asp-items="@ViewBag.StatusId" required>
                                        <option value="" selected disabled>Selecione uma opção</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger error"></span>
                                </div>
                            </div>

                        </div>
                        <div class="card-action">
                            <div class="row">
                                <div class="col s12">
                                    <div class="form-group right">
                                        <a asp-action="Index" class="waves-effect waves-light btn-small red tooltipped " data-position="bottom" data-tooltip="Voltar"><i class="material-icons">arrow_back</i></a>
                                        &nbsp;<button id="post" type="submit" class="waves-effect waves-light btn-small tooltipped" data-position="bottom" data-tooltip="Salvar"><i class="material-icons">save</i></button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</div>
@section Scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {

        });
        $('.tooltipped').tooltip();

        $("input[id*='Descricao']").inputmask({
            regex: "[a-z-áàâãéèêíïóôõöúçñÁÀÂÃÉÈÍÏÓÔÕÖÚÇÑ ]*",
            casing: "upper"
        });


    </script>
}









